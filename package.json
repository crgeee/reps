{
  "name": "reps",
  "version": "1.5.0",
  "description": "AI-powered interview prep tracker with spaced repetition",
  "type": "module",
  "scripts": {
    "build:server": "tsc --project tsconfig.server.json",
    "build:web": "cd web && npx vite build",
    "build": "npm run build:server && npm run build:web",
    "migrate": "node --env-file=.env --import=tsx/esm server/db/migrate.ts",
    "migrate:users": "node --env-file=.env --import=tsx/esm server/db/migrate-users.ts",
    "dev:server": "node --env-file=.env --import=tsx/esm --watch server/index.ts",
    "dev:web": "cd web && vite",
    "start": "node dist/server/index.js",
    "cli": "tsx src/index.ts",
    "lint": "eslint .",
    "typecheck": "tsc --project tsconfig.server.json --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,css,md}\" --ignore-unknown",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,css,md}\" --ignore-unknown",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hono/node-server": "^1.13.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "hono": "^4.6.0",
    "lucide-react": "^0.575.0",
    "node-cron": "^3.0.3",
    "postgres": "^3.4.5",
    "resend": "^4.0.0",
    "uuid": "^10.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@eslint/js": "^10.0.1",
    "@types/node": "^22.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "eslint": "^10.0.2",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.56.1"
  }
}
