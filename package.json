{
  "name": "reps",
  "version": "1.0.0",
  "description": "AI-powered interview prep tracker with spaced repetition",
  "type": "module",
  "scripts": {
    "build:server": "tsc --project tsconfig.server.json",
    "build:web": "cd web && vite build",
    "build": "npm run build:server && npm run build:web",
    "migrate": "node --env-file=.env --import=tsx/esm server/db/migrate.ts",
    "dev:server": "node --env-file=.env --import=tsx/esm --watch server/index.ts",
    "dev:web": "cd web && vite",
    "start": "node dist/server/index.js",
    "cli": "tsx src/index.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@hono/node-server": "^1.13.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "hono": "^4.6.0",
    "node-cron": "^3.0.3",
    "postgres": "^3.4.5",
    "resend": "^4.0.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}
