{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "@/src/*": ["./src/*"]
    }
  },
  "include": ["server/**/*", "src/spaced-repetition.ts", "src/types.ts"],
  "exclude": ["node_modules", "dist", "web"]
}
